<!doctype html>
<html lang="{{ metadata.language }}" class="dark" data-theme="dark" :class="theme.name" x-cloak x-data="xDOM">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {# Metadata #}
  <title>{{ title or metadata.title }}</title>
  <meta name="description" content="{{ description or metadata.description }}">
  <meta name="generator" content="{{ eleventy.generator }}">

  {# Canonical #}
  <link rel="canonical" href="{{ page.url | htmlBaseUrl(metadata.url) }}">

  {# Favicons #}
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
  <link rel="manifest" href="/site.webmanifest">
  <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
  <meta name="msapplication-TileColor" content="#da532c">
  <meta name="theme-color" content="#f1f1f1" :content="theme.dark?'#222222':'#f1f1f1'">

  <link rel="stylesheet" href="/css/main.css">

</head>
<body class="min-h-screen bg-stone-200 dark:bg-stone-900 text-stone-950 dark:text-stone-200 select-none">

<a href="#skip" class="sr-only">Skip to main content</a>

{% include "partials/header.njk" %}

<main id="skip" class="">
  {{ content | safe }}
</main>

{% if settings.showFooter %}
  {% include "partials/footer.njk" %}
{% endif %}

{#{% include "partials/splash-loading.njk" %}#}

<script src="/js/main{%- if eleventy.env.runMode == 'build' -%}.{{ build.hash.short }}{%- endif -%}.js" defer type="text/javascript"></script>

<!-- Current page: {{ page.url | htmlBaseUrl }} -->
</body>
</html>
